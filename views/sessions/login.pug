extends ../layout

block content
  .contentholder
    h1.align-center Jobbunny Login
    .row
      .col-md-3
      .col-md-6
        form(name='login' action='/api/users/login' method="post")
          .form-group
            label(for='email') Email
            input#username.form-control(type='text' placeholder='Enter your email' name='email')
          .form-group
            label(for='password') Password
            input#password.form-control(type='password' placeholder='Password' name='password')
          button.btn.btn-success.btn-block(type='submit') Login
          br
      .col-md-3
